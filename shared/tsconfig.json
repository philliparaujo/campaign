{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",  // Set the baseUrl to src
    "paths": {
    "shared/*": ["*"]  // Map shared/* to src/*
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}